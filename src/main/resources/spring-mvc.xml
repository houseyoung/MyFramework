<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.2.xsd
    http://www.springframework.org/schema/mvc
    http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">

    <!-- 默认的注解映射的支持，它会自动注册DefaultAnnotationHandlerMapping与AnnotationMethodHandlerAdapter-->
    <mvc:annotation-driven />

    <!--自动扫描注解的Controller-->
    <context:component-scan base-package="com.myframework.controller"/>

    <!--避免IE在ajax请求时，返回json出现下载-->
    <bean id="jacksonMessageConverter" class="org.springframework.http.converter.json.MappingJacksonHttpMessageConverter">
        <property name="supportedMediaTypes">
            <list>
                <value>text/html;charset=UTF-8</value>
            </list>
        </property>
    </bean>

    <!--对模型视图添加前后缀-->
    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver"
          p:prefix="/WEB-INF/views/" p:suffix=".jsp"/>

    <!--文件上传-->
    <bean id="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
        <!--最大上传大小(字节)-->
        <property name="maxUploadSize" value="1048576" />
    </bean>

    <!--静态资源路径-->
    <mvc:resources mapping="/resources/**" location="/resources/" />

    <!--上传文件路径-->
    <mvc:resources mapping="/upload/**" location="/upload/" />

    <!--拦截器-->
    <mvc:interceptors>
        <!--学生功能拦截器-->
        <mvc:interceptor>
            <mvc:mapping path="/user/*/**" />
            <bean class="com.houseyoung.student.interceptor.UserInterceptor">
                <!--忽略地址-->
                <property name="loginUrl" value="/user/login"/>
                <property name="forbiddenUrl" value="/forbidden"/>
            </bean>
        </mvc:interceptor>
        <!--辅导员功能拦截器-->
        <mvc:interceptor>
            <mvc:mapping path="/admin/class/**" />
            <mvc:mapping path="/admin/health/**" />
            <mvc:mapping path="/admin/instructor/**" />
            <mvc:mapping path="/admin/score/**" />
            <mvc:mapping path="/admin/student/**" />
            <bean class="com.houseyoung.student.interceptor.InstructorInterceptor">
                <!--忽略地址-->
                <property name="loginUrl" value="/admin/login"/>
                <property name="forbiddenUrl" value="/forbidden"/>
            </bean>
        </mvc:interceptor>
        <!--管理员功能拦截器-->
        <mvc:interceptor>
            <mvc:mapping path="/admin/admin/**" />
            <mvc:mapping path="/admin/course/**" />
            <mvc:mapping path="/admin/department/**" />
            <mvc:mapping path="/admin/school/**" />
            <bean class="com.houseyoung.student.interceptor.AdminInterceptor">
                <!--忽略地址-->
                <property name="loginUrl" value="/admin/login"/>
                <property name="forbiddenUrl" value="/forbidden"/>
            </bean>
        </mvc:interceptor>
    </mvc:interceptors>
</beans>