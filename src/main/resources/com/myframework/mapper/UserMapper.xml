<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.myframework.mapper.UserMapper">
    <resultMap id="userResultMap" type="User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="role" property="role"/>
    </resultMap>

    <select id="queryById" resultMap="userResultMap">
        SELECT id AS "id", username AS "username"
        FROM t_user WHERE id = #{id}
    </select>

    <select id="listUser" resultMap="userResultMap">
        SELECT * FROM t_user
    </select>

    <select id="countByUsernameAndPassword" resultType="int">
        SELECT count(1) FROM t_user
        WHERE username = #{username} AND password = #{password}
    </select>

    <select id="checkRole" resultType="int">
        SELECT role FROM t_user
        WHERE username = #{username} AND password = #{password}
    </select>
</mapper>